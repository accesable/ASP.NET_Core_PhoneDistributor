@page
@model WebApplication_Slicone_Supplier.Areas.Admin.Pages.Role.EditModel
@{
    ViewData["Title"] = "Update a role";
}
<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <label asp-for="Input.Name" class="control-label"></label>
                <input asp-for="Input.Name" class="form-control"/>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Update This Role" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="./Index">Go Back To Role List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
