@page
@model WebApplication_Slicone_Supplier.Areas.Admin.Pages.Role.DeleteModel
@{
    ViewData["Title"] = "Update a role";
}
<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <p>Are Your Sure Want to delete This Role <strong>@Model.role.Name</strong></p>
                
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Delete This Role" class="btn btn-danger" />
                <a class="btn btn-primary" asp-page="./Index">Go Back To Role List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
