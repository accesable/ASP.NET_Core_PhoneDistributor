
@model WebApplication_Slicone_Supplier.Models.Pager
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class=" page-item">
                    <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage-1)">Previous</a>
                </li>
                <li class=" page-item">
                    <a class="page-link" asp-page="./Index" asp-route-pageIndex="1">First</a>
                </li>
            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active":"")">
                    <a class="page-link" asp-page="./Index" asp-route-pageIndex="@pge">@pge</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class=" page-item">
                    <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage+1)">Next</a>
                </li>
                <li class=" page-item">
                    <a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.TotalPages)">Last</a>
                </li>
            }

        </ul>
    }



</div>